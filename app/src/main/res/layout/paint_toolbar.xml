<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/paint_toolbar"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:clickable="true"
    android:background="@color/paintToolbarColor"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    app:behavior_peekHeight="@dimen/bottom_sheet_collapsed_height"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pencil"
            android:layout_width="@dimen/paint_tool_btn_size"
            android:layout_height="@dimen/paint_tool_btn_size"
            android:scaleType="center"
            android:src="@drawable/ic_pencil_white_24dp" />

        <ImageView
            android:id="@+id/brush"
            android:layout_width="@dimen/paint_tool_btn_size"
            android:layout_height="@dimen/paint_tool_btn_size"
            android:scaleType="center"
            android:src="@drawable/ic_brush_white_24dp" />

        <ImageView
            android:id="@+id/eraser"
            android:layout_width="@dimen/paint_tool_btn_size"
            android:layout_height="@dimen/paint_tool_btn_size"
            android:scaleType="center"
            android:src="@drawable/ic_eraser_white_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:clickable="true">

        <!--TODO why need clickable??  Without it buttons change color wherever I click-->
        <!--TODO why need clickable?? -->
        <!--TODO why need clickable?? -->
        <!--TODO why need clickable?? -->

        <ImageView
            android:id="@+id/open"
            android:layout_width="@dimen/paint_tool_btn_size"
            android:layout_height="@dimen/paint_tool_btn_size"
            android:scaleType="center"
            android:clickable="true"
            android:src="@drawable/open" />

        <ImageView
            android:id="@+id/save"
            android:layout_width="@dimen/paint_tool_btn_size"
            android:layout_height="@dimen/paint_tool_btn_size"
            android:scaleType="center"
            android:clickable="true"
            android:src="@drawable/save" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="6dp"
        android:paddingStart="6dp">

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/size" />

        <SeekBar
            android:id="@+id/size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:max="50" />
    </LinearLayout>

</LinearLayout>